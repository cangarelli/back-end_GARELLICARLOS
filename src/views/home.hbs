<div class="home">
    {{#if role}}
    <div class="home__buttonery">
        <button value="create">Agregar producto</button>
    </div>
    {{/if}}
    <div>
        <h1>{{saludo}}</h1>
    </div>

    <div class="gondola">
        {{#each products}}
        <div class="gondola__productCard">
            <h1>{{this.title}}</h1>
            <h2>Cuesta ${{this.price}}</h2>
            <p>Quedan: {{this.stock}}</p>
            <p>{{this.description}}</p>
            <div id="{{this._id}}">
                {{!-- {{#if role}} --}}
                <div class="adminButtons">
                    <button value="create-update">Update</button>
                    <button value="delete">Eliminar</button>
                </div>
                {{!-- {{/if}} --}}
                <div class="userButtons">
                    <button><a href="/views/product/{{this._id}}">Ver detalle</a></button>
                    <button value="add-to-cart">Agregar al carrito</button>
                </div>
            </div>
        </div>
        {{/each}}
        <div>
            {{#if hasPrevPage}}
            <a href="{{prevLink}}">Pagina previa</a>
            {{/if}}
            <h1>{{page}}</h1>
            {{#if hasNextPage}}
            <a href="{{nextLink}}">Pagina siguiente</a>
            {{/if}}
        </div>
    </div>
    <script>
        let cartId = '{{cartId}}';
    </script>
</div>
