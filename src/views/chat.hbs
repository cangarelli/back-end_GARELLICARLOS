<div class="chat">
    <div class="chat__box">
        {{#each messagesList}}
        <div class="chat__box--userMessage">
            <p>{{this.user}}:</p>
            <p>{{this.message}}</p>
        </div>
        {{/each}}
    </div>

    <form class="chat__postman">
        <input type="text" name="chatBox" class="chat__postman--letter" id="chatBox">
        <input type="button" value="Enviar">
    </form>
</div>
    {{#if userId}}

    {{else}}
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>window.location.href = `/views/login`; </script>
    {{/if}}
